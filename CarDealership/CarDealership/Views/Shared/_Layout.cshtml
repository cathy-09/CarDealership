<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <title>@ViewData["Title"] - CarLibrary</title>
    <style>
        body {
            margin: 0;
            font-family: "Arial", sans-serif;
            background-color: #222;
            color: #fff;
            overflow-x: hidden;
        }

        /* Navigation Menu */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 1rem 0.5rem;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar a {
            color: #fff;
            text-decoration: none;
            margin: 0 15px;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .navbar a:hover {
            color: #ff7e5f;
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
        }

        /* Bright Color */
        .bright {
            color: #ff7e5f;
        }

        /* Main Content */
        .main-content {
            padding-top: 70px; /* To account for the fixed navbar */
        }
    </style>
    @RenderSection("Styles", required: false) <!-- Optional: For view-specific styles -->
</head>
<body>
    <!-- Navigation Menu -->
    <div class="navbar">
        <div class="logo">Car<span class="bright">Library</span></div>
        <div>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("Index", "Catalog")">Catalog</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
            <a asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody() <!-- This is where the view content will be injected -->
    </div>

    <!-- Optional: Add a footer here if needed -->

    @RenderSection("Scripts", required: false) <!-- Optional: For view-specific scripts -->
</body>
</html>