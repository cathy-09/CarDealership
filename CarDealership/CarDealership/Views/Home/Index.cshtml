@{
    ViewData["Title"] = "Home";
}

<div class="hero" id="home">
    <h1>Welcome to the Car Library</h1>
    <p>
        Browse our extensive collection of cars and discover your dream vehicle.
    </p>
</div>

<div class="featured-cars">
    <div class="featured-container">
        <div class="car-card">
            <img src="https://assets.newatlas.com/dims4/default/e3fdcbf/2147483647/strip/true/crop/1936x1290+961+318/resize/2880x1919!/quality/90/?url=http%3A%2F%2Fnewatlas-brightspot.s3.amazonaws.com%2F7e%2F1d%2Fd0ca9b1f42d18dad34851d6e160c%2F559212.jpg"
                 alt="Luxury Sedan" />
            <div class="card-content">
                <h3>Luxury Sedan</h3>
                <p>A sleek and modern sedan designed for comfort and performance.</p>
            </div>
        </div>
        <div class="car-card">
            <img src="https://hips.hearstapps.com/hmg-prod/images/10best-2025-subaru-brz-114-674dd631a6375.jpg?crop=0.490xw:0.580xh;0.219xw,0.313xh&resize=980:*"
                 alt="Sports Coupe" />
            <div class="card-content">
                <h3>Sports Coupe</h3>
                <p>Experience the thrill of driving with this powerful sports coupe.</p>
            </div>
        </div>
        <div class="car-card">
            <img src="https://car-images.bauersecure.com/wp-images/4020/best-electric-suvs-kia-ev9-front-blue.jpg"
                 alt="Electric SUV" />
            <div class="card-content">
                <h3>Electric SUV</h3>
                <p>Eco-friendly and spacious, perfect for family adventures.</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: "Arial", sans-serif;
            background-color: #222;
            color: #fff;
            overflow-x: hidden;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 70px 20px;
        }

            .hero h1 {
                font-size: 36px;
                font-weight: bold;
            }

            .hero p {
                font-size: 18px;
                max-width: 800px;
                margin: 0 auto;
            }

        /* Featured Cars Section */
        .featured-cars {
            text-align: center;
            padding: 40px 20px;
        }

        .featured-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .car-card {
            background-color: #333;
            border-radius: 12px;
            overflow: hidden;
            width: 300px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .car-card:hover {
                transform: translateY(-10px);
                box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.4);
            }

            .car-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .card-content {
            padding: 15px;
            background-color: #1e1e1e;
            text-align: left;
        }

            .card-content h3 {
                font-size: 20px;
                margin: 0 0 10px;
                color: #ff7e5f;
            }

            .card-content p {
                font-size: 14px;
                color: #ccc;
            }
    </style>
}
