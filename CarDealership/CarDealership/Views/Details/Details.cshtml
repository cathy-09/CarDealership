@model CarDealership.Controllers.Models.Cars.AllCarsModel

@{
    ViewData["Title"] = "Car Details";
}

<div class="car-details">
    <h1>Car Details</h1>
    <div class="car-info">
        <!-- Car Image -->
        <div class="car-image">
            <img src="@Model.ImageUrl" alt="Car Image" />
        </div>

        <!-- Car Specifications -->
        <div class="car-specs">
            <h2>Specifications</h2>
            <div class="spec-item"><span>Brand:</span> @Model.Brand</div>
            <div class="spec-item"><span>Model:</span> @Model.Model</div>
            <div class="spec-item"><span>Year:</span> @Model.Year</div>
            <div class="spec-item"><span>Fuel Type:</span> @Model.FuelType</div>
            <div class="spec-item"><span>Kilometers Driven:</span> @Model.KilometersDriven km</div>
            <div class="spec-item"><span>Horsepower:</span> @Model.Horsepower HP</div>
            <div class="spec-item"><span>Dealership:</span> @Model.Dealership</div>
        </div>

        <!-- Car Description -->
        <div class="description">
            <p>@Model.Description</p>
        </div>

        <!-- Car Price -->
        <div class="price">Price: $@Model.Price.ToString("N0")</div>

        <!-- Buttons -->
        <div class="buttons">
            <button class="button buttonwishlist">Add to Wishlist</button>
            <button class="button buttonedit">Edit</button>
            <button class="button buttondelete">Delete</button>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Add view-specific styles here if needed */
    </style>
}